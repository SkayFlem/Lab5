#define _CRT_SECURE_NO_WARNINGS
#define _USE_MATH_DEFINES
#include <locale.h>
#include <stdio.h>
#include <stdlib.h>
#include <conio.h>
#include <math.h>
#define M_PI            3.14159265358979323846

int main() {
    setlocale(LC_ALL, "RUS");

    float grid;
    float gr;

    printf("введите градус:");
    scanf("%f", &gr);

    float a = gr * M_PI;
    float perevod = sin(a / 180);

    printf("результаты вычислений: %.6f", perevod);

}
